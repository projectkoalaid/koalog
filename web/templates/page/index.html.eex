<section class="home-page full-page ng-scope">

    <%= render "slider.html", conn: @conn, featured: @featured_posts %>
    <h1 class="heading__h1">
		<%= link "Recommended for you", to: post_path(@conn, :index), class: "button large expanded" %>
    </h1>

    <section id="grid" data-columns="4" class="grid salvattore-grid grid-fixed">

        <% lists = Enum.chunk @featured_posts, 2, 2, [] %>
        <%= Enum.map lists, fn(list) -> render("list.html", conn: @conn, posts: list) end %>

    </section>

